[Unit]
After=tailscaled.service

[Service]
ExecStart=python3 /opt/fu_sensors/sensors/rpi/rpi_mqtt_sensors.py
WorkingDirectory=/opt/fu_sensors/sensors/rpi
Restart=always
StandardOutput=append:/opt/fu_sensors/sensors/rpi/poll.log
StandardError=inherit
SyslogIdentifier=farmpi_sensors
User=pi
Group=pi

[Install]
WantedBy=multi-user.target
