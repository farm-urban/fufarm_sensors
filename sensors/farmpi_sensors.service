[Unit]
After=tailscaled.service

[Service]
ExecStart=python3 /opt/fu_sensors/dfrobot/raspberrypi/poll_farmpi.py
WorkingDirectory=/opt/fu_sensors/dfrobot/raspberrypi
Restart=always
StandardOutput=append:/opt/fu_sensors/dfrobot/raspberrypi/poll.log
StandardError=inherit
SyslogIdentifier=farmpi_sensors
User=pi
Group=pi

[Install]
WantedBy=multi-user.target
